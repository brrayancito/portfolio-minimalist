---
import Section from '../Section.astro';

import { languages } from '../../../cv.json';
---

<Section title="Languages">
  <ul>
    {
      languages.map(({ language }) => (
        <li>
          <span>{language}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
